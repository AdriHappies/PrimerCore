@model List<Persona>

<h1>Controller View Model</h1>

<a asp-controller="Informacion"
   asp-action="Index">
    Volver al menu
</a>
<hr/>

<table class="table table-dark">
    @foreach (Persona p in Model)
    {
        <tr>
            <td>@p.Nombre</td>
            <td>@p.Edad</td>
            <td>@p.Email</td>
        </tr>
    }
</table>